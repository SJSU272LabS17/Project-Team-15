<html>
<head>
	<title>Ebay-Signup</title>
	<meta charset="utf-8"/>
	<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
	<script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
 	<link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"/>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css"/>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

	<!-- Ebay Favicon -->
	 <link rel="icon" type="image/jpg" href="eBay_logo.png"/>

	<!-- Script for Angular JS -->
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js"></script>
	
	<script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

	<!-- Loading the AngularJS file from /public/angularJS folder -->
	<script src="angularJS/signup.js"></script>
	<style>
		.signup{
			width: 350px;
			height: 317px;
			margin : 40px auto;
		}
	</style>

	<title>Sign up for Ebay</title>
</head>

<body ng-app="signup" ng-controller="signup">

	<div class="container-fluid">
		<div class="row" style="background-image:url('homeimage.jpg');">
			<p class= "text-center">
				<a href='/'><img src="images/eBay_logo.png" height="70" width="200" style="margin-top: 20px; margin-left: 20px;" /></a>
			</p>
		</div>
		
		<div class="signup">
			<form role = "form" name="signupform" ng-submit="submit()">
				<h2>Join Ebay now</h2>

				<!-- First Name -->
			    <div class="form-group">
			      <label for="firstname">First Name</label>
			      <input type="text" class="form-control" ng-model="firstname" placeholder="Enter First Name" required/>
			      <!-- <label ng-show = "signupform.firstname.$error.required">First Name is Required</label> -->
			    </div>

				<!-- Last Name -->
				<div class="form-group">
			      <label for="lastname">Last Name</label>
			      <input type="text" class="form-control" ng-model="lastname" placeholder="Enter Last Name"/>
			    </div>

				<!-- Email -->
				<div class="form-group">
			      	<label for="email">Email</label>
			      	<input type="email" class="form-control" ng-model="email" placeholder="Enter email" required/>
			      	<!-- <label ng-show="signupform.email.$dirty && signupform.email.$invalid">
              			<label ng-show = "signupform.email.$error.required">Email is required</label>
              			<label ng-show = "signupform.email.$error.email">Invalid email address</label>
              		</label> -->
              		
              		<!-- <div ng-model = "isEmailExist"> -->
              			<div class="alert alert-danger" ng-show="isEmailExist=='true'">
  							<strong>Entered Email exist!</strong>
						</div>
					</div>
              		<!-- <label ng-model="emailExists"></label> -->
			    <!-- </div> -->

				<!-- Password -->
				<div class="form-group">
			      <label for="passwod">Password</label>
			      <input type="password" class="form-control" ng-model="password" placeholder="Enter password" required/>
			      <!-- <label ng-show = "signupform.password.$error.required">Password is Required</label> -->
			    </div>

				<!-- Date of Birth -->
				<div class="form-group">
			    	
			    	<label for="birthday">Date of birth</label>
					<script>
			    		webshims.setOptions('forms-ext', {types: 'date'});
						webshims.polyfill('forms forms-ext');
					</script>
					<div >
						<input type="date" class="form-control" ng-model="dateOfBirth" required ></input>
					</div> 
			    </div>


			    <!-- Location -->
				<div class="form-group">

			      <label for="lastname" style="margin-right:400px;">Address</label>
			      <input type="text" class="form-control" ng-model="location" placeholder="Enter Location" required/>
			    </div>

			    <!-- Contact -->
				<div class="form-group">
			      <label for="contact">Contact</label>
			      <input type="text" class="form-control" ng-model="contact" placeholder="Enter Contact" required/>
			    </div>

				
				
				<!-- Become a seller -->
				<br>			
			    <!-- Credit Card Number -->
			    Become a seller just by adding credit-card number.
				<div class="form-group">
			      <label for="CreditCardNumber">Credit Card Number</label>
			      <input type="text" class="form-control" ng-model="creditCardNumber" placeholder="Enter 16-digit card number"/>
			    </div>
				
				<!-- Submit Button -->
				<button type="submit" class="btn btn-success btn-block">Sign up</button>

				<!-- Submit Button -->
				<button  class="btn btn-info btn-block" ng-click="backToSignin()">Back to Login</button>


			</form>
			
		</div>
	</div>
</body>
</html>